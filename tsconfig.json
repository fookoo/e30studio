{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "ES5",
//    "outDir": "dist",
//    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.*",
    "src/**/*.stories.*",
  ],
}