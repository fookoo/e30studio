{
  "compilerOptions": {
    "strict": true,

    "moduleResolution": "node",
    "target": "es6",
    "module": "esNext",
    "declaration": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "vite.config.ts",
    "vitest.config.ts",
    "src/**/*.test.*",
    "src/**/*.stories.*"
  ]
}
